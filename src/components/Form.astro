<script>
  const name_input = document.getElementById("name-input") as HTMLInputElement;
  const email_input = document.getElementById(
    "email-input"
  ) as HTMLInputElement;
  const message_input = document.getElementById(
    "area-input"
  ) as HTMLTextAreaElement;
  const submit_btn = document.getElementById("submit-btn") as HTMLButtonElement;

  submit_btn?.addEventListener("click", submit_handler);
  function submit_handler(e: MouseEvent) {
    e.preventDefault();
    window.location.href = "https://sumanbiswas.vercel.app/contact";
  }
</script>

<form>
  <div class="input-box">
    <label class="input-label" for="name-input"
      >Name
      <span style={`display: auto`} class="required-star">*</span>
    </label>
    <input placeholder="john doe" id="name-input" />
  </div>
  <div class="input-box">
    <label class="input-label" for="email-input"
      >Email
      <span style={`display: auto`} class="required-star">*</span>
    </label>
    <input placeholder="your@email.com" id="email-input" />
  </div>
  <div class="input-box">
    <label class="input-label" for="area-input"
      >Message
      <span style={`display: none`} class="required-star">*</span>
    </label>
    <textarea placeholder="Leave your message here" id="area-input"></textarea>
  </div>
  <div class="input-box">
    <button id="submit-btn">SUBMIT</button>
  </div>
</form>

