---
import Content from "../components/Content.astro";
import Form from "../components/Form.astro";
import Logo from "../components/Logo.astro";
import NavButton from "../components/NavButton.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Nutshell">
  <main>
    <nav>
      <Logo />
      <NavButton />
    </nav>
    <div class="div-1 flex-center">
      <Content />
      <div class="bottom-div">
        <p>
          We have created a dummy app, you can
          <a
            class="down-link"
            href="https://play.google.com/store/apps/details?id=com.sumanbiswas.nutshell"
            target="_blank"
          >
            download it here
          </a>
          your overall app will look like this. But please remember that most of
          the things like (themes,logos,fonts) are customizable. And depending on
          the demand we will work on new templates as well.
        </p>
      </div>
    </div>
    <div class="div-2 flex-center">
      <img class="mockup-img" src="./home/mobile.webp" />
    </div>
  </main>

  <section class="flex-cente">
    <Form />
  </section>
</Layout>

<style>
  .flex-center {
    display: flex;
    justify-content: center;
    align-items: center;
  }
  nav {
    position: absolute;
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-inline: 2rem;
    margin-top: 1rem;
    width: 100%;
  }
  main {
    display: flex;
    justify-content: space-between;
  }
  .div-1 {
    min-height: -webkit-fill-available;
    justify-content: flex-start;
    padding-left: 2rem;
    width: 50vw;
    height: 100vh;
    position: relative;
  }
  .div-2 {
    background: linear-gradient(
      180deg,
      var(--accent-mid) 0%,
      var(--accent-light) 100%
    );
    min-height: -webkit-fill-available;
    width: 50vw;
    height: 100vh;
  }
  .mockup-img {
    margin-top: 2rem;
    max-width: 20rem;
  }
  .bottom-div {
    position: absolute;
    bottom: 0;
    left: 0;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    padding: 1rem;
    font-size: 0.8rem;
    color: #fff;
    background-color: var(--accent-mid);
  }
  .down-link {
    display: inline;
    color: #fff;
  }

  @media only screen and (orientation: portrait) {
    main {
      flex-direction: column;
    }
    .div-1 {
      height: max-content;
    }
    .div-2 {
      height: max-content;
      min-width: 100%;
      padding-block: 1rem;
    }
    .mockup-img {
      max-width: 17rem;
    }
    .bottom-div {
      display: none;
    }
  }
  @media only screen and (max-width: 330px) {
    .mockup-img {
      width: 70vw;
    }
  }
  @media only screen and (orientation: landscape) and (max-width: 875px) {
    .mockup-img {
      max-width: 40vw;
    }
    .div-1 {
      padding-left: 0.5rem;
    }
    nav {
      padding-inline: 0.5rem;
    }
  }

  section {
  }
</style>
